@keyframes htmlAnimation {
  0% {
    background-size: 300% 300%;
    background-position: 0% 50%;
  }
  25% {
    background-size: 250% 250%;
    background-position: 25% 75%;
  }
  50% {
    background-size: 200% 200%;
    background-position: 50% 50%;
  }
  75% {
    background-size: 250% 250%;
    background-position: 75% 25%;
  }
  100% {
    background-size: 300% 300%;
    background-position: 100% 50%;
  }
}

@keyframes beforeAnimation {
  0% {
    background-size: 300% 300%;
    background-position: 0% 50%;
    filter: hue-rotate(0deg);
	opacity: 0.6;
  }
  25% {
    background-size: 250% 250%;
    background-position: 25% 75%;
    filter: hue-rotate(90deg);
	opacity: 0.5;
  }
  50% {
    background-size: 200% 200%;
    background-position: 50% 50%;
    filter: hue-rotate(180deg);
	opacity: 0.4;
  }
  75% {
    background-size: 250% 250%;
    background-position: 75% 25%;
    filter: hue-rotate(270deg);
	opacity: 0.5;
  }
  100% {
    background-size: 300% 300%;
    background-position: 100% 50%;
    filter: hue-rotate(360deg);
	opacity: 0.6;
  }
}

@keyframes afterAnimation {
  0% {
    background-size: 300% 300%;
    background-position: 0% 50%;
    opacity: 0.4;
  }
  25% {
    background-size: 250% 250%;
    background-position: 25% 75%;
    opacity: 0.5;
  }
  50% {
    background-size: 200% 200%;
    background-position: 50% 50%;
    opacity: 0.6;
  }
  75% {
    background-size: 250% 250%;
    background-position: 75% 25%;
    opacity: 0.5;
  }
  100% {
    background-size: 300% 300%;
    background-position: 100% 50%;
    opacity: 0.4;
  }
}

html {
  min-height: 100%;
  position: relative;
  background-image: linear-gradient(0deg, #bafaf0, #7ec8e3, #95ad0b, #a0db8e, #a1b6f0, #e3ae7e);
  background-size: 300% 300%;
  animation: htmlAnimation 5s infinite alternate ease-in-out;
}

html:before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  background-image: linear-gradient(120deg, #ff7eb9, #ff65a3, #7afcff, #feff9c, #fff740);
  animation: beforeAnimation 7s infinite alternate ease-in-out;
}

html:after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -2;
  background-image: linear-gradient(180deg, #aff0ba, #0b95ad, #8ea0db, #f0a1b6, #bae3f0, #7e95ad);
  animation: afterAnimation 11s infinite alternate ease-in-out;
}


